<script src="/javascripts/script.js"></script>

<form action="/signup" method="POST">
  <label for="username"></label>
  <input type="text" name="username" required id="username" placeholder="username">
  <p id="username-validation"></p>
  <div>
    <label for="firsname">FirstName <small>Only Alphabetic Characters!</small></label>
  </div>
  <div>
    <input type="text" pattern="^[A-Za-z]+$" required name="firstname" placeholder="Firstname">
  </div>
  <div>
      <label for="lastname">Lastname <small>Only Alphabetic Characters!</small></label>
  </div>
  <div>
    <input type="text" pattern="^[A-Za-z]+$" required name="lastname" placeholder="Lastname">
  </div>
  <div>
      <label for="email"></label>
  <input type="email" name="email" required id="email" placeholder="email">
  </div>
  <div>
  <label for="password">Password <small>At least 8 characters one uppercase one lowercase</small></label>
  <input type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" name="password" required id="password" placeholder="password">
</div>
<button type="submit">Create!</button>
</form>

